<body>

    @Html.Partial("Main-Navigation")
    <!--cookie consent panel-->

    <div class="home">

        @Html.Partial("Header")


        @RenderBody()
    </div>
    @Html.Partial("Footer")

    <script src="~/lib/bootstrap/js/bootstrap.bundle.js"></script>
    <script>
        function cycleImages() {
            var $active = $('#imageCycler .active');
            var $next = ($active.next().length > 0) ? $active.next() : $('#imageCycler div:first');
            //$('#imageCycler div').hide();
            $next.addClass('nextcycler');//move the next image up the pile
            //$active.fadeOut(1500, function () {//fade out the top image
            $active.fadeTo("slow", 0);//reset the z-index and unhide the image
            $next.fadeTo("slow", 1);//make the next image the top one
            //});
            //$next.removeClass('nextcycler');
            $next.addClass("active").removeClass("nextcycler");
            $active.removeClass("active");
        }

        $(document).ready(function () {
            // run every 7s
            setInterval('cycleImages()', 7000);
        })
        function openNav() {
            document.getElementById("mySidenav").style.width = "250px";
            document.getElementById("mySidenav").style.boxShadow = "0 0 0 100vw rgba(0, 0, 0, 0.5)";
            document.getElementById("closeNav").style.display = "flex";

            document.body.style.overflow = "hidden";

            var elements = document.getElementsByClassName("nav-link");

            for (var i = 0; i < elements.length; i++) {
                elements[i].style.display = "flex"; // Set opacity of nav-label to 0
            }

            setTimeout(function () {
                for (var i = 0; i < elements.length; i++) {

                    elements[i].style.opacity = "1" // Set display of nav-label to none after 0.2s
                }
            }, 200); // Delay of 0.2s
        }

        function closeNav() {
            document.getElementById("mySidenav").style = "0";
            document.body.style = "";
            document.getElementById("closeNav").style = "";

            var elements = document.getElementsByClassName("nav-link");


            for (var i = 0; i < elements.length; i++) {
                elements[i].style.opacity = "0" // Set display of nav-label to flex
            }

            setTimeout(function () {
                for (var i = 0; i < elements.length; i++) {
                    elements[i].style.display = "none"; // Set opacity of nav-label to 1 after 0.2s
                }
            }, 200); // Delay of 0.2s

            isNavOpen = true;
        }
    </script>
    <script>
        $('.bxslider').each(function () {
            numMinSlides = 4;
            numMaxSlides = 4;
            if ($(window).width() < 1200) { numMaxSlides = 3; numMinSlides = 3; }
            if ($(window).width() < 768) { numMaxSlides = 2; numMinSlides = 2; }
            if ($(window).width() < 420) { numMaxSlides = 1; numMinSlides = 1; }
            slideMargin = 10;
            if (numMaxSlides == 1) {
                slideWidth = $(window).width();
            }
            else {
                slideWidth = ($(window).width() - (numMaxSlides * slideMargin)) / numMaxSlides;
            }
            $(this).bxSlider({
                minSlides: numMinSlides,
                maxSlides: numMaxSlides,
                slideWidth: slideWidth,
                slideMargin: slideMargin,
                ticker: true,
                speed: 15000
            });
        });
    </script>
    <script>
        function LoadDelay() {
            var topPadding = $("#myNav").height();
            $("body").css("padding-top", topPadding);
        }
        document.addEventListener('DOMContentLoaded', LoadDelay);
    </script>
</body>
</html>